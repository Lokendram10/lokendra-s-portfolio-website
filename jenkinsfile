pipeline {
 agent any
    stages{
         stage('clone repo'){
           steps{
             echo 'cloning repo'
             git branch: 'main' , url: 'https://github.com/Lokendram10/lokendra-s-portfolio-website'
            }
          }

         stage('build'){
           steps{
             echo' creating docker image'
             sh ' docker build  -t portfolio:latest .'
            }
          }

        stage('deploy'){
           steps{
             echo'deploying'
           sh' docker compose up -d --build'
            }
          }

  }
}
